#!/bin/bash

role=${role};

if [ "\$role" != "host" -a "\$role" != "guest" ]
then
  echo "\$0 host|guest"
  exit 1;
fi

cd ${pbase}/install;
for name in base-install mysql-install;
do
  echo "++++++++++++deploy \$name ++++++++++++++"
  bash \${name}/deploy.sh \$role
  echo "+++++++++++++++++++++++++++++++++++++++"
done
